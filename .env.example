# Nokia SLM Configuration
# Copy this file to .env and modify as needed

# === Paths ===
# SLM_BASE_DIR=D:/Ligaments
# SLM_DATA_DIR=D:/Ligaments/data
# SLM_CACHE_DIR=D:/Ligaments/cache
# SLM_DOCUMENTS_DIR=D:/Ligaments/documents

# === Index Paths (relative to DATA_DIR or absolute) ===
# SLM_FAISS_INDEX=nokia_vector_index.faiss
# SLM_METADATA_PATH=nokia_vector_meta.pkl
# SLM_GRAPH_PATH=nokia_graph.gml

# === LLM Endpoints ===
LM_STUDIO_URL=http://localhost:8103/v1
OLLAMA_URL=http://localhost:11434/api/chat
OLLAMA_MODEL=llama3.2

# === LLM Parameters ===
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=1000
LLM_TIMEOUT_SIMPLE=60
LLM_TIMEOUT_COMPLEX=120
LLM_MAX_RETRIES=2

# === Embedding ===
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
EMBEDDING_DIM=384

# === Chunking ===
CHUNK_SIZE=512
CHUNK_OVERLAP=64

# === Retrieval ===
VECTOR_TOP_K=50
BM25_TOP_K=50
RERANK_TOP_K=15
MAX_CONTEXT_CHUNKS=200

# === Safety ===
MIN_CONFIDENCE_THRESHOLD=0.05
VALIDATION_OVERLAP_SIMPLE=0.08
VALIDATION_OVERLAP_CONFIG=0.10
VALIDATION_OVERLAP_DEFAULT=0.15

# === Cache ===
CACHE_TTL_SECONDS=3600
CACHE_ENABLED=true

# === Server ===
SERVER_HOST=0.0.0.0
SERVER_PORT=5000
SERVER_DEBUG=false

# === Logging ===
LOG_LEVEL=INFO
LOG_FORMAT=json
# LOG_FILE=logs/slm.log

# === Cross-Encoder ===
CROSS_ENCODER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
CROSS_ENCODER_ENABLED=true

# === Context Window ===
RESERVED_TOKENS=1500
